{{>nav}}

<main class="container">
    <article>
        <header>
            <h3>Atualizar dados do condutor</h3>
        </header>
        <form action="/condutor" method="post">
        <input type="hidden" name="id" value="{{post.id}}">
            <label>
                Nome
                <input type="text" placeholder="Nome" required name="nomeCondutor" value="{{post.nomeCondutor}}">
            </label>
            <div class="grid">
                <div>
                    <label>
                        CPF
                        <input type="text" placeholder="CPF" required name="cpfCondutor" value="{{post.cpfCondutor}}">
                    </label>
                </div>
                <div>
                    <label>
                        CNH
                        <input type="text" placeholder="CNH" required name="cnh" value="{{post.cnh}}">
                    </label>
                </div>
            </div>
            <label>
                Bairro
                <input type="text" placeholder="Bairro" required name="bairro" value="{{post.bairro}}">
            </label>
            <label>
                Logradouro
                <input type="text" placeholder="Rua/Avenida" required name="logradouro" value="{{logradouro.nomeCondutor}}">
            </label>
            <div class="grid">
                <div>
                    <label>
                        Número da Residência
                        <input type="text" placeholder="Número" required name="numero" value="{{post.numero}}">
                    </label>
                </div>
                <div>
                    <label>
                        CEP
                        <input type="text" placeholder="XXXXX-XXX" required name="cep" value="{{post.cep}}">
                    </label>
                </div>
            </div>
            <label>
                Complemento
                <textarea placeholder="Exemplo:Próximo de.../Casa azul..." name="complemento" value="{{post.complemento}}"></textarea>
            </label>
            <input type="submit" value="Alterar">
        </form>
    </article>
</main>

{{>footer}}