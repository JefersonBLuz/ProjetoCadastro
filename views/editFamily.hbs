{{>nav}}

<main class="container">
    
    <article>
        <header>
            <h3>Atualizar dados família</h3>
        </header>
        <form action="/familia" method="POST">
        <input type="hidden" name="id" value="{{post.id}}">
            <label>
                Nome do responsável
                <input type="text" placeholder="Nome" required name="nomeResponsavel" value="{{post.nomeResponsavel}}">
            </label>
            <div class="grid">
                <div>
                    <label>
                        CPF do responsável
                        <input type="text" placeholder="CPF" required name="cpfResponsavel" value="{{post.cpfResponsavel}}">
                    </label>
                </div>
                <div>
                    <label>
                        Tamanho da família
                        <input type="number" placeholder="Número" required name="quantidadeFamilia" value="{{post.quantidadeFamilia}}">
                    </label>
                </div>
            </div>
            <label>
                Bairro
                <input type="text" placeholder="Bairro" required name="bairro" value="{{post.bairro}}">
            </label>
            <label>
                Logradouro
                <input type="text" placeholder="Rua/Avenida" required name="logradouro" value="{{post.logradouro}}">
            </label>
            <div class="grid">
                <div>
                    <label>
                        Número da Residência
                        <input type="text" placeholder="Número" required name="numero" value="{{post.numero}}">
                    </label>
                </div>
                <div>
                    <label>
                        CEP
                        <input type="text" placeholder="XXXXX-XXX" required name="cep" value="{{post.cep}}">
                    </label>
                </div>
            </div>
            <label>
                Complemento
                <textarea placeholder="Exemplo:Próximo de.../Casa azul..." name="complemento" value="{{post.complemento}}"></textarea>
            </label>
            <input type="submit" value="Alterar">
        </form>
    </article>
</main>

{{>footer}}